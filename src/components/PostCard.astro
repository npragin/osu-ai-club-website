---
interface Props {
  title: string;
  author: string;
  imageSrc?: string;
}

const {
  author,
  imageSrc = "https://placebear.com/300/200",
} = Astro.props;
---

<div
  class="rounded-md overflow-hidden text-white border-white border-2 border-opacity-10 bg-opacity-10 bg-white"
>
  <img src={imageSrc} alt="ber" />
  <div class="flex flex-col mx-auto w-fit m-2">
    <p class="font-mono text-left text-lg font-semibold inline-block w-fit">
      {"how to choose a specialty"}
    </p>
    <p class="font-mono text-wrap text-left text-gray-200 inline-block w-fit">
      {"by " + author}
    </p>
  </div>
</div>

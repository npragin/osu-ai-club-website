---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/officers/*.{jpeg,jpg,png}",
);

interface Props {
  name: string;
  role: string;
  imagePath: string;
}

const { name, role, imagePath } = Astro.props;
---

<div class="flex flex-col rounded-md text-center p-4 bg-black bg-opacity-20">
  <Image src={images[imagePath]()} alt="" class="rounded-md overflow-hidden" />
  <div class="flex flex-col items-center justify-center grow py-4">
    <p class="font-semibold text-lg">{name}</p>
    <p>{role}</p>
  </div>
</div>
